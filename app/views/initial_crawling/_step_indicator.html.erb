<%# 
  로컬 변수:
  - steps: 단계 정보 배열 [{number: 1, name: "단계 이름", status: "waiting"}]
%>
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <% steps.each do |step| %>
    <div id="step-<%= step[:number] %>" class="<%= card_classes(size: :sm) %> hover:shadow-md">
      <div class="flex flex-col items-center text-center">
        <div class="w-12 h-12 rounded-full <%= step_number_classes(step[:status]) %> flex items-center justify-center mb-3 transition-all duration-300">
          <% if step[:status] == 'completed' %>
            <i class="ri-check-line text-white text-xl"></i>
          <% else %>
            <span class="text-lg font-semibold"><%= step[:number] %></span>
          <% end %>
        </div>
        <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-1"><%= step[:name] %></h4>
        <p class="text-xs text-gray-500 dark:text-gray-400"><%= step_status_text(step[:status]) %></p>
      </div>
    </div>
  <% end %>
</div>