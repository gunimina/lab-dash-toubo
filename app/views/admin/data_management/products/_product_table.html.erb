<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
    <thead class="bg-gray-50 dark:bg-gray-900">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          이미지
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          뉴카탈로그넘버
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          국문상품명
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          상세설명
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          단위
        </th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          가격
        </th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          재고
        </th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
      <% if products.any? %>
        <% products.each do |product| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap">
              <% if product.image_url.present? %>
                <%= image_tag product.image_url, 
                    alt: product.korean_product_name,
                    class: "h-16 w-16 object-cover rounded-lg",
                    loading: "lazy" %>
              <% else %>
                <div class="h-16 w-16 bg-gray-200 dark:bg-gray-600 rounded-lg flex items-center justify-center">
                  <%= lucide_icon("package", class: "w-8 h-8 text-gray-400 dark:text-gray-500") %>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900 dark:text-white">
                <%= product.new_catalog_number %>
              </div>
              <% if product.cat_no.present? %>
                <div class="text-xs text-gray-500 dark:text-gray-400">
                  Cat.No: <%= product.cat_no %>
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900 dark:text-white">
                <%= product.korean_product_name %>
              </div>
              <% if product.has_children? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 mt-1">
                  <%= product.child_products.count %>개 하위상품
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2" title="<%= product.display_description %>">
                <%= truncate(product.display_description, length: 100) %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900 dark:text-white">
                <%= product.display_unit %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right">
              <div class="text-sm font-medium text-gray-900 dark:text-white">
                <%= number_to_currency(product.display_price, unit: "₩", format: "%u %n", delimiter: ",") %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right">
              <% if product.display_stock_quantity.to_i > 0 %>
                <span class="text-sm font-medium text-green-600 dark:text-green-400">
                  <%= product.display_stock_quantity %>
                </span>
              <% else %>
                <span class="text-sm font-medium text-red-600 dark:text-red-400">
                  품절
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="px-6 py-8 text-center">
            <div class="flex flex-col items-center justify-center space-y-2">
              <%= lucide_icon("package-x", class: "w-12 h-12 text-gray-400 dark:text-gray-500") %>
              <p class="text-gray-500 dark:text-gray-400">검색 결과가 없습니다.</p>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if defined?(products) && products.respond_to?(:total_pages) && products.total_pages > 1 %>
  <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
    <%= paginate products %>
  </div>
<% end %>