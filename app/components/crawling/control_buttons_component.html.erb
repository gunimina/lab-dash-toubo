<div id="control-buttons" class="flex flex-wrap gap-3">
  <% visible_buttons.each do |button_key| %>
    <% config = button_config(button_key) %>
    <button 
      type="button"
      data-action="<%= config[:action] %>"
      class="<%= button_classes(button_key) %>"
    >
      <%= lucide_icon(config[:icon], class: "w-4 h-4 mr-2") %>
      <%= config[:text] %>
    </button>
  <% end %>
</div>